#!/bin/ash

# System Shutdown Script
#

. /etc/rc.d/functions

echo
echo "System is going down for reboot or halt now."
echo

echo "Running stop scripts."
while read line
do
	if [ "$line" != "" ]; then
		eval $line stop
	fi
done < /etc/rc.d/stop_services

echo -n "Syncing hardware clock to system clock:"
hwclock --systohc --utc
check_status

echo -n "Disabling swap space: "
swapoff -a
check_status
